  <div class="row">
  <div class="class col-md-4 col-md-offset-4">
  <br>
  <h1>Create Seller</h1>
  <br>

  <% if @seller.errors.any? %>
  <div class="alert alert-danger">
  <% @seller.errors.full_messages.each do |error| %>
  <p><%= error %></p>
  <% end %>
  </div>
  <% end %>

  <%= form_for @seller do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
    <br>
    <%= form.label :rating %>
    <%= form.number_field :rating,in: 1.0..5.0, step: 0.5, class: 'form-control' %>
    <br>

    <%= form.submit 'Save', class: 'btn btn-block btn-default' %>

 <% end %>

 </div>	
</div>