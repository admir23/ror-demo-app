<tr>
	<td class="col-md-3"><%= link_to product.name, product_path(product) %></td>	
	<td class="col-md-1"><%= product.price %></td>	
	<td class="col-md-2"><%= link_to product.seller.name, seller_path(product.seller_id) %></td>
	<td class="col-md-2"><%= link_to product.category.name, category_path(product.category_id) %></td>
	<td class="col-md-2"><%= product.created_at.strftime("%Y-%d-%m") %></td>
	<td class="col-md-2"><%= link_to '<i class="glyphicon glyphicon-edit"></i> Edit'.html_safe, edit_product_path(product), class: 'btn btn-sm btn-primary' %>
			<%= link_to '<i class="glyphicon glyphicon-trash"></i> Delete'.html_safe,product_path(product), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-sm btn-danger'%></td>
</tr>
